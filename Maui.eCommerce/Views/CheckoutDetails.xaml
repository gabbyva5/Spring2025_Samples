<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.CheckoutDetails"
             Title="Checkout">
    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Receipt" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Label Text="--- Items ---" HorizontalOptions="Center"/>

        <ListView ItemsSource="{Binding ReceiptItems}"
            >
             <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*" />  
                                <ColumnDefinition/>  
                                <ColumnDefinition/>  
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Name}" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="{Binding Quantity}" VerticalOptions="Center" /> 
                            <Label Grid.Column="2" Text=" {Binding Price}" VerticalOptions="Center" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="Subtotal" FontAttributes="Bold" />
        <Label Text="{Binding Subtotal}" />
        <Label Text="Tax Amount (7%)" FontAttributes="Bold" />
        <Label Text="{Binding TaxAmount}"/>
        <Label Text="Total" FontAttributes="Bold" />
        <Label Text="{Binding Total}"/>

        <Button Text="Go Back" Clicked="CancelClicked" HorizontalOptions="Center" Margin="0,20,0,0"/>

    </VerticalStackLayout>
</ContentPage>